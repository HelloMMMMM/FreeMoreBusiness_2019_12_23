<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/c_F72424"
            android:minHeight="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_item_drainage"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/bg_1"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="@color/c_F72424"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="0dp"
            android:layout_height="204dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28.5dp"
                android:text="@string/drainage_card_title"
                android:textColor="@color/c_1D1D1D"
                android:textSize="19sp" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/step_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="72dp">

                <TextView
                    android:id="@+id/tv_step_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:background="@drawable/bg_step"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_step_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_step"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@id/tv_step_1"
                    app:layout_constraintRight_toLeftOf="@+id/tv_step_3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_step_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/bg_step"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="2.5dp"
                    android:background="@color/c_E0E0E0"
                    app:layout_constraintBottom_toBottomOf="@id/tv_step_1"
                    app:layout_constraintLeft_toRightOf="@id/tv_step_1"
                    app:layout_constraintRight_toLeftOf="@id/tv_step_2"
                    app:layout_constraintTop_toTopOf="@id/tv_step_1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="2.5dp"
                    android:background="@color/c_E0E0E0"
                    app:layout_constraintBottom_toBottomOf="@id/tv_step_1"
                    app:layout_constraintLeft_toRightOf="@id/tv_step_2"
                    app:layout_constraintRight_toLeftOf="@id/tv_step_3"
                    app:layout_constraintTop_toTopOf="@id/tv_step_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/drainage_card_step_1"
                    android:textColor="@color/c_666666"
                    app:layout_constraintLeft_toLeftOf="@id/tv_step_1"
                    app:layout_constraintRight_toRightOf="@id/tv_step_1"
                    app:layout_constraintTop_toBottomOf="@id/tv_step_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/drainage_card_step_2"
                    android:textColor="@color/c_666666"
                    app:layout_constraintLeft_toLeftOf="@id/tv_step_2"
                    app:layout_constraintRight_toRightOf="@id/tv_step_2"
                    app:layout_constraintTop_toBottomOf="@id/tv_step_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/drainage_card_step_3"
                    android:textColor="@color/c_666666"
                    app:layout_constraintLeft_toLeftOf="@id/tv_step_3"
                    app:layout_constraintRight_toRightOf="@id/tv_step_3"
                    app:layout_constraintTop_toBottomOf="@id/tv_step_3" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="170dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="146.5dp"
                android:background="@drawable/bg_home_v3_publish_btn"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toTopOf="@+id/tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_1" />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/tab"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/c_E0E0E0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />
    </android.support.constraint.ConstraintLayout>
</layout>