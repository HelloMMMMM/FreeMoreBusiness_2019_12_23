<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7.5dp"
    android:background="@color/colorWhite"
    android:paddingBottom="20dp">

    <View
        android:id="@+id/tab_icon"
        android:layout_width="3dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/bg_home_v3_tab_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:text="@string/home_v3_activity_title"
        android:textColor="@color/c_555555"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@id/tab_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tab_icon" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="13.5dp"
        android:layout_marginRight="13.5dp"
        android:src="@mipmap/ic_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/tab_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tab_icon" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/c_F5F5F5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_icon" />

    <include
        android:id="@+id/ac_1"
        layout="@layout/layout_home_v3_activity_activity_template"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="5.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ac_2"
        app:layout_constraintTop_toBottomOf="@id/tab_icon" />

    <include
        android:id="@+id/ac_2"
        layout="@layout/layout_home_v3_activity_activity_template"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.5dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="11dp"
        app:layout_constraintLeft_toRightOf="@id/ac_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_icon" />

    <include
        android:id="@+id/ac_3"
        layout="@layout/layout_home_v3_activity_activity_template"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="5.5dp"
        android:layout_marginBottom="5.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ac_4"
        app:layout_constraintTop_toBottomOf="@id/ac_1" />

    <include
        android:id="@+id/ac_4"
        layout="@layout/layout_home_v3_activity_activity_template"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.5dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="5.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ac_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ac_1" />
</android.support.constraint.ConstraintLayout>