<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="34.5dp"
            android:layout_marginLeft="34.5dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_home_v3_scan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5dp"
            android:text="@string/home_v3_scan"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_scan"
            app:layout_constraintRight_toRightOf="@id/iv_scan"
            app:layout_constraintTop_toBottomOf="@id/iv_scan" />

        <ImageView
            android:id="@+id/iv_store_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10.5dp"
            android:layout_marginRight="10.5dp"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_store_address"
            app:layout_constraintRight_toLeftOf="@id/iv_store_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_store_avatar" />

        <TextView
            android:id="@+id/tv_store_address"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10.5dp"
            android:layout_marginRight="10.5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/c_FDC5C5"
            app:layout_constraintBottom_toBottomOf="@id/iv_store_avatar"
            app:layout_constraintRight_toLeftOf="@id/iv_store_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_store_name" />
    </android.support.constraint.ConstraintLayout>
</layout>