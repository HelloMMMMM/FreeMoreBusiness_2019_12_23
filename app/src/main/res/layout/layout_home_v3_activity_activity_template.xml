<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="228.5dp"
    android:layout_margin="5.5dp"
    app:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/iv_template"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:scaleType="fitXY"
        android:src="@mipmap/test_2" />

    <TextView
        android:layout_width="77dp"
        android:layout_height="23dp"
        android:background="@color/c_F72424"
        android:gravity="center"
        android:text="@string/home_v3_activity_luck_draw"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="144.5dp"
        android:text="门店日常抽奖"
        android:textColor="@color/c_000000"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="170dp"
        android:text="引流：约800人"
        android:textColor="@color/c_666666"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="193dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/bg_home_v3_activity_create_btn"
        android:gravity="center"
        android:text="@string/home_v3_activity_create"
        android:textColor="@color/c_F72424" />
</android.support.v7.widget.CardView>