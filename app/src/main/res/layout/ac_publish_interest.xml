<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.fx.feemore.business.ui.interest.vm.VMPublishInterest"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include
            android:id="@+id/toolbar"
            layout="@layout/base_layout_toolbar"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_photo_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="18dip"
                    android:text="@string/publish_interest_photo_tips"
                    android:textColor="@color/publish_interest_photo_tips"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_photo_add_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dip"
                    android:text="@string/publish_interest_photo_add_tips"
                    android:textColor="@color/publish_interest_photo_add_tips"
                    android:textSize="11sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_photo_tips"
                    app:layout_constraintStart_toEndOf="@+id/tv_photo_tips"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dip"
                    android:minHeight="70dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_photo_tips"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/tv_des_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dip"
                    android:text="@string/publish_interest_des_tips"
                    android:textColor="@color/publish_interest_photo_tips"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_photo_tips"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView"/>

                <EditText
                    android:id="@+id/ed_commodity_des"
                    android:layout_width="0dip"
                    android:layout_height="54dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/publish_commodity_des_bg"
                    android:gravity="center_vertical|left"
                    android:hint="描述商品详情"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:textColor="@color/text_light_black"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_photo_tips"
                    app:layout_constraintTop_toBottomOf="@+id/tv_des_tips"/>

                <View
                    android:id="@+id/v_commodity_space"
                    android:layout_width="0dip"
                    android:layout_height="6dip"
                    android:layout_marginTop="16dip"
                    android:background="@color/gray_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_commodity_des"/>

                <TextView
                    android:id="@+id/tv_name_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="53dip"
                    android:gravity="center_vertical"
                    android:text="@string/publish_interest_name_tips"
                    android:textColor="@color/text_light_black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_photo_tips"
                    app:layout_constraintTop_toBottomOf="@+id/v_commodity_space"/>

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:background="@null"
                    android:hint="请填写权益名称"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:singleLine="true"
                    android:textColor="@color/text_light_black"
                    android:textColorHint="#80888888"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_name_tips"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_name_tips"
                    app:layout_constraintTop_toTopOf="@+id/tv_name_tips"/>

                <View
                    android:id="@+id/v_name_line"
                    style="@style/h_line"
                    android:layout_width="0dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_tips"/>

                <TextView
                    android:id="@+id/tv_price_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="53dip"
                    android:gravity="center_vertical"
                    android:text="@string/publish_interest_price_tips"
                    android:textColor="@color/text_light_black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_name_tips"
                    app:layout_constraintStart_toStartOf="@+id/tv_name_tips"
                    app:layout_constraintTop_toBottomOf="@+id/v_name_line"/>

                <EditText
                    android:id="@+id/ed_price"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:background="@null"
                    android:hint="请填写价格"
                    android:inputType="number"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:singleLine="true"
                    android:textColor="@color/text_light_black"
                    android:textColorHint="#80888888"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_price_tips"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_price_tips"
                    app:layout_constraintTop_toTopOf="@+id/tv_price_tips"/>

                <View
                    android:id="@+id/v_price_line"
                    style="@style/h_line"
                    android:layout_width="0dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_price_tips"/>

                <TextView
                    android:id="@+id/tv_business_hours_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="53dip"
                    android:gravity="center_vertical"
                    android:text="@string/publish_interest_business_hours_tips"
                    android:textColor="@color/text_light_black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_name_tips"
                    app:layout_constraintStart_toStartOf="@+id/tv_name_tips"
                    app:layout_constraintTop_toBottomOf="@+id/v_price_line"/>

                <TextView
                    android:id="@+id/tv_business_hours"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:background="@null"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:singleLine="true"
                    android:textColor="@color/text_light_black"
                    android:textColorHint="#888888"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_business_hours_tips"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_business_hours_tips"
                    app:layout_constraintTop_toTopOf="@+id/tv_business_hours_tips"/>

                <View
                    android:id="@+id/v_business_hours_line"
                    style="@style/h_line"
                    android:layout_width="0dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_business_hours_tips"/>

                <TextView
                    android:id="@+id/tv_type_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="53dip"
                    android:gravity="center_vertical"
                    android:text="@string/publish_interest_type_tips"
                    android:textColor="@color/text_light_black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_name_tips"
                    app:layout_constraintStart_toStartOf="@+id/tv_name_tips"
                    app:layout_constraintTop_toBottomOf="@+id/v_business_hours_line"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:background="@null"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:singleLine="true"
                    android:textColor="@color/text_light_black"
                    android:textColorHint="#888888"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_type_tips"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_type_tips"
                    app:layout_constraintTop_toTopOf="@+id/tv_type_tips"/>

                <View
                    android:id="@+id/v_type_line"
                    style="@style/h_line"
                    android:layout_width="0dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_type_tips"/>

                <TextView
                    android:id="@+id/tv_contact_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="53dip"
                    android:gravity="center_vertical"
                    android:text="@string/publish_interest_contact_tips"
                    android:textColor="@color/text_light_black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_name_tips"
                    app:layout_constraintStart_toStartOf="@+id/tv_name_tips"
                    app:layout_constraintTop_toBottomOf="@+id/v_type_line"/>

                <EditText
                    android:id="@+id/ed_contact"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入联系方式"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:singleLine="true"
                    android:textColor="@color/text_light_black"
                    android:textColorHint="#80888888"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_contact_tips"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_contact_tips"
                    app:layout_constraintTop_toTopOf="@+id/tv_contact_tips"/>

                <View
                    android:id="@+id/v_contact_line"
                    style="@style/h_line"
                    android:layout_width="0dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_tips"/>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/login_btn_h"
                    android:layout_marginTop="33dip"
                    android:background="@drawable/login_btn"
                    android:gravity="center"
                    android:text="@string/publish_interest_btn_text"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/login_btn_text"
                    app:layout_constraintEnd_toEndOf="@+id/ed_commodity_des"
                    app:layout_constraintStart_toStartOf="@+id/tv_photo_tips"
                    app:layout_constraintTop_toBottomOf="@+id/v_contact_line"/>

                <View
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_submit"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>