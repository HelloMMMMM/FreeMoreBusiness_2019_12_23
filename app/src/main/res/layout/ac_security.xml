<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/base_layout_toolbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_account_tips"
        android:layout_width="0dip"
        android:layout_height="45dip"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="当前绑定手机号"
        android:textColor="#202020"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:drawablePadding="13dip"
        android:gravity="center_vertical"
        android:paddingRight="15dip"
        android:textColor="#202020"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_account_tips"
        app:layout_constraintEnd_toEndOf="@+id/tv_account_tips"
        app:layout_constraintTop_toTopOf="@+id/tv_account_tips"
        tools:text="136****1234"
        />

</android.support.constraint.ConstraintLayout>