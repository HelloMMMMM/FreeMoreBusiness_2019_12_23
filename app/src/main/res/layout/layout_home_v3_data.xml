<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <View
            android:id="@+id/tab_icon"
            android:layout_width="3dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_home_v3_tab_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:text="@string/home_v3_data_title"
            android:textColor="@color/c_555555"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@id/tab_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tab_icon" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/data_1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:background="@mipmap/bg_home_v3_data_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/data_2"
            app:layout_constraintTop_toBottomOf="@id/tab_icon">

            <TextView
                android:id="@+id/tv_data_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_1A7BB2"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_data_label_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_data_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/home_v3_data_label_1"
                android:textColor="@color/c_1A7BB2"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_data_1" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/data_2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="3.5dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginTop="13dp"
            android:background="@mipmap/bg_home_v3_data_2"
            app:layout_constraintLeft_toRightOf="@id/data_1"
            app:layout_constraintRight_toLeftOf="@id/data_3"
            app:layout_constraintTop_toBottomOf="@id/tab_icon">

            <TextView
                android:id="@+id/tv_data_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_D52962"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_data_label_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_data_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/home_v3_data_label_2"
                android:textColor="@color/c_D52962"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_data_2" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/data_3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="3.5dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/bg_home_v3_data_3"
            app:layout_constraintLeft_toRightOf="@id/data_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_icon">

            <TextView
                android:id="@+id/tv_data_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_C26C0F"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_data_label_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_data_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/home_v3_data_label_3"
                android:textColor="@color/c_C26C0F"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_data_3" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/data_4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/bg_home_v3_data_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/data_5"
            app:layout_constraintTop_toBottomOf="@id/data_1">

            <TextView
                android:id="@+id/tv_data_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_BD6F33"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_data_label_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_data_label_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/home_v3_data_label_4"
                android:textColor="@color/c_BD6F33"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_data_4" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/data_5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="3.5dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/bg_home_v3_data_5"
            app:layout_constraintLeft_toRightOf="@id/data_4"
            app:layout_constraintRight_toLeftOf="@id/data_6"
            app:layout_constraintTop_toBottomOf="@id/data_1">

            <TextView
                android:id="@+id/tv_data_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_15ABBB"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_data_label_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_data_label_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/home_v3_data_label_5"
                android:textColor="@color/c_15ABBB"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_data_5" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/data_6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="3.5dp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="25dp"
            android:background="@mipmap/bg_home_v3_data_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/data_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_1">

            <TextView
                android:id="@+id/tv_data_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_7B60C6"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_data_label_6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_data_label_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/home_v3_data_label_6"
                android:textColor="@color/c_7B60C6"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_data_6" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>